@model SignInViewModel

@{
    ViewData["Title"] = Model.Title;
}

<section id="signin" class="top-title">
    <form method="post" asp-controller="Auth" asp-action="SignIn" class="signin-form">
        <div>
            @Model.ErrorMessage
        </div>

        <h1>Sign in</h1>
        <p class="signin-text">Dont have any account yet? <a asp-controller="Auth" asp-action="SignUp">Create one here.</a></p>

        <div class="input-control">
            <label asp-for=SignInForm.Email class="labels"></label>
            <span asp-validation-for="SignInForm.Email" class="error error-styling"></span>
            <input asp-for="SignInForm.Email" class="email" id="email">
        </div>

        <div class="input-control">
            <label asp-for="SignInForm.Password" class="labels"></label>
            <span asp-validation-for="SignInForm.Password" class="error error-styling"> </span>
            <input asp-for=SignInForm.Password class="password" id="password">
        </div>

        <div class="checkmark">
            <input asp-for="SignInForm.RememberMe" type="checkbox" id="term-check" class="termscheck" title="Remember me">
            <label for="term-check" class="term-label">Remember me next time.</label>
            <span asp-validation-for="SignInForm.RememberMe" class="error error-styling"></span>
        </div>
        <button type="submit" class="btn-theme-s" formmethod="post">@Model.Title</button>
        <a class="forgot-pass" asp-asp-controller="Account" asp-action="ForgotPw">Forgot your password?</a>
    </form>

</section>