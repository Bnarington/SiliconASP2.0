@model SignUpViewModel

@{
    ViewData["Title"] = Model.Title;
}

<section id="signup" class="top-title">
    <form class="signup-form" method="post" asp-controller="Auth" asp-action="SignUp">
        <h1>Create account</h1>
        <p class="signin-text">Already have an account? <a asp-controller="Auth" asp-action="SignIn">Sign in here.</a></p>

        <div class="input-control">
            <label asp-for=SignUpForm.FirstName class="labels"></label>
            <span asp-validation-for="SignUpForm.FirstName"></span>
            <input asp-for="SignUpForm.FirstName" class="firstname" placeholder="First name">
        </div>

        <div class="input-control">
            <label asp-for="SignUpForm.LastName" class="labels"></label>
            <span asp-validation-for="SignUpForm.LastName"> </span>
            <input asp-for=SignUpForm.LastName class="lastname" placeholder="Surname">
        </div>


        <div class="input-control">
            <label asp-for=SignUpForm.Email class="labels"></label>
            <span asp-validation-for="SignUpForm.Email"></span>
            <input asp-for=SignUpForm.Email class="email" placeholder="Enter your email adress." aria-label="Email">
        </div>

        <div class="input-control">
            <label asp-for=SignUpForm.Password class="labels"></label>
            <span asp-validation-for="SignUpForm.Password"></span>
            <input asp-for=SignUpForm.Email class="password" placeholder="*******" aria-label="Password">
        </div>

        <div class="input-control">
            <label asp-for="SignUpForm.ConfirmPassword" class="labels"></label>
            <span asp-validation-for="SignUpForm.ConfirmPassword"></span>
            <input asp-for=SignUpForm.ConfirmPassword class="password" placeholder="*******" aria-label="Password">
        </div>

        <div class="checkmark">
            <input asp-for="SignUpForm.TermsAndConditions" type="checkbox" id="term-check" class="termscheck" title="Remember me" required>
            <label for="term-check" class="term-label">I agree to the <a asp-controller="About" asp-action="Terms">Terms</a> & <a asp-controller="About" asp-action="Conditions">Conditions</a>.</label>
            <span asp-validation-for="SignUpForm.TermsAndConditions"></span>
        </div>
        <button type="submit" class="btn-theme-s">@Model.Title</button>
    </form>
</section>